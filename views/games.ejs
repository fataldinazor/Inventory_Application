<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
  <% if (games.length === 0) { %>
  <div class="text-center p-8 bg-gray-100 rounded-lg shadow-lg">
    <p class="text-xl font-semibold text-gray-700 mb-4">
      There are no games available in this category.
    </p>
    <a
      href="/create"
      class="bg-gray-100 rounded-lg overflow-hidden flex justify-center items-center hover:bg-gray-200 transition duration-300"
    >
      <div class="text-center p-4">
        <div class="text-6xl text-gray-600 font-bold">+</div>
        <p class="text-gray-800 mt-2">Add New Game</p>
      </div>
    </a>
  </div>
  <% } else {games.forEach(game => { %>
  <div class="bg-white rounded-lg shadow-lg overflow-hidden">
    <img
      class="w-full object-cover"
      src="<%=game.game_image%>"
      alt="<%=game.name%>"
    />
    <div class="p-6">
      <a href="/games/<%=game.game_id%>" class="text-xl font-semibold mb-2"><%=game.name%></a>
      <p class="text-gray-500 mb-4"><i><%=game.year%></i></p>
      <p class="text-gray-700 leading-relaxed mb-4"><%=game.description%></p>
    </div>
  </div>
  <% }) %>
  <a
    href="/create"
    class="bg-white rounded-lg shadow-lg overflow-hidden flex justify-center items-center hover:bg-gray-200 transition duration-300"
  >
    <div class="text-center p-4">
      <div class="text-6xl text-gray-600 font-bold">+</div>
      <p class="text-gray-800 mt-2">Add New Game</p>
    </div>
  </a>
  <%}%>
</div>
