<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../../styles/output.css" />
    <title>Update Genre</title>
  </head>
  <body class="bg-gray-100 text-gray-900">
    <%- include("./header.ejs") %>

    <div class="container mx-auto p-6 lg:p-8">
      <h1 class="text-2xl lg:text-3xl font-bold text-center mb-8">
        Update Genre
      </h1>

      <form
        action="/genres/<%=genre.genre_id%>/edit"
        method="POST"
        class="bg-white p-6 rounded-lg shadow-lg max-w-lg mx-auto"
      >
        <!-- Genre Name Input -->
        <div class="mb-6">
          <label for="genreName" class="block text-gray-700 font-medium mb-2">
            Genre:
          </label>
          <input
            type="text"
            name="genre"
            id="genreName"
            value="<%=genre.genre%>"
            placeholder="Enter Genre"
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
            required
          />
        </div>

        <!-- Genre Image Input -->
        <div class="mb-6">
          <label for="genreImage" class="block text-gray-700 font-medium mb-2">
            Genre Cover Image:
          </label>
          <input
            type="text"
            name="genre_image"
            value="<%=genre.genre_image%>"
            id="genreImage"
            placeholder="Enter Image Link from IMDB"
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
            required
          />
        </div>

        <!-- Password Input -->
        <div class="mb-6">
          <label for="password" class="block text-gray-700 font-medium mb-2">
            Password:
          </label>
          <input
            type="password"
            id="password"
            name="password"
            placeholder="Enter your password"
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
            required
          />
        </div>

        <!-- Submit Button -->
        <button
          type="submit"
          class="w-full bg-blue-500 text-white font-bold py-2 px-4 rounded-lg hover:bg-blue-600 transition duration-300"
        >
          Update
        </button>
      </form>
    </div>
  </body>
</html>
