<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../styles/output.css" />
    <title>Searched Games</title>
  </head>
  <body class="bg-gray-100 text-gray-900">
    <%- include("./header.ejs") %>
    <div class="container mx-auto p-8">
      <form action="/search" method="GET" class="mb-8 flex items-center gap-4">
        <label for="search" class="text-lg font-semibold">Search:</label>
        <input
          type="text"
          id="search"
          name="q"
          placeholder="Enter your Game Name"
          class="flex-1 p-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500"
        />
      </form>
      <h1 class="text-4xl font-bold mb-8 text-center">
        Games Matching Your Search
      </h1>
      <%- include('./games.ejs') %>
    </div>
  </body>
</html>
